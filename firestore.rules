
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /companies/{companyId} {
      allow read, write: if isSignedIn();
    }

    match /users/{userId} {
      allow read, write: if isSignedIn();
    }
    
    // Allow users to read/write their own subcollections
    match /users/{userId}/{document=**} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }

    match /projects/{projectId} {
      allow read, write: if isSignedIn();
    }

    match /projects/{projectId}/{document=**} {
      allow read, write: if isSignedIn();
    }
    
    // Allow engineers to query their own reports across all projects
    match /{path=**}/daily_reports/{reportId} {
      allow read: if isSignedIn() && resource.data.engineerId == request.auth.uid;
      allow write: if isSignedIn();
    }

    match /equipment/{equipmentId} {
      allow read, write: if isSignedIn();
    }

    match /equipment_names/{equipmentNameId} {
      allow read, write: if isSignedIn();
    }
    
    match /invitations/{invitationId} {
        allow read, write: if isSignedIn();
    }

    match /units/{unitId} {
      allow read, write: if isSignedIn();
    }

    match /documents/{documentId} {
        allow read, write: if isSignedIn();
    }
    
    match /report_index/{reportId} {
      allow read, write: if isSignedIn();
    }
    
    match /admin_data/{docId} {
       allow read, write: if isSignedIn();
    }
  }
}

    